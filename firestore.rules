rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles collection
    match /users/{userId} {
      // Users can read and update their own profiles
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Only authenticated users can create profiles, and they must match their UID
      allow create: if request.auth != null && request.auth.uid == userId &&
                     request.resource.data.keys().hasOnly(['uid', 'email', 'name', 'createdAt', 'isEmailVerified']);
      // No one can delete user profiles directly
      allow delete: if false;
    }
    
    // Chat sessions collection
    match /chatSessions/{sessionId} {
      // Users can only access their own chat sessions
      allow read, write: if request.auth != null && 
                           resource.data.userId == request.auth.uid;
    }
    
    // Admin access to all documents (add your admin UIDs here)
    match /{document=**} {
      allow read, write: if request.auth != null && 
                           request.auth.uid in ['YOUR_ADMIN_UID_HERE'];
    }
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}